<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>io.servicecomb</groupId>
		<artifactId>paas-cse</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>
	<artifactId>cse-demo</artifactId>
	<packaging>pom</packaging>
	<modules>
		<module>demo-local</module>
		<module>demo-perf-client</module>
		<module>demo-server-servlet</module>
		<module>demo-pojo</module>
		<module>demo-jaxrs</module>
		<!--<module>demo-springmvc</module>-->
		<module>demo-schema</module>
		<module>demo-crossapp</module>
		<module>demo-spring-boot</module>
		<module>demo-spring-boot-transport</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>demo-schema</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>all-client</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>pojo-server</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>jaxrs-server</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>springmvc-server</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>crossapp-server</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>pojo-client</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>jaxrs-client</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>springmvc-client</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
			<dependency>
				<groupId>io.servicecomb</groupId>
				<artifactId>crossapp-client</artifactId>
				<version>${paas.cse.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<properties>
		<demo.output.dir>
			${project.basedir}/../../../cse-demo-bin
		</demo.output.dir>
	</properties>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-deploy-plugin</artifactId>
					<version>2.8.2</version>
					<configuration>
						<skip>true</skip>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-install-plugin</artifactId>
					<version>2.5.2</version>
					<configuration>
						<skip>false</skip>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.6</version>
					<configuration>
						<outputDirectory>${demo.output.dir}/${project.name}</outputDirectory>
						<archive>
							<manifest>
								<addClasspath>true</addClasspath>
								<classpathPrefix>../lib/</classpathPrefix>
								<mainClass>${demo.main}</mainClass>
							</manifest>
							<manifestEntries>
								<Class-Path>. ..</Class-Path>
							</manifestEntries>
						</archive>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>2.6</version>
					<configuration>
						<outputDirectory>${demo.output.dir}/${project.name}</outputDirectory>
						<archive>
							<manifest>
								<addClasspath>true</addClasspath>
								<classpathPrefix>../lib/</classpathPrefix>
							</manifest>
							<manifestEntries>
								<Class-Path>. ..</Class-Path>
							</manifestEntries>
						</archive>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<version>2.10</version>
					<executions>
						<execution>
							<id>copy-dependencies</id>
							<phase>package</phase>
							<goals>
								<goal>copy-dependencies</goal>
							</goals>
							<configuration>
								<outputDirectory>${demo.output.dir}/lib</outputDirectory>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
